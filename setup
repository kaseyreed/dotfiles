#!/bin/bash

echo "Meow."

CURRENT_DIR=`pwd`

# Should be automeowtic.
ln -sf  "${CURRENT_DIR}/.zshrc" "${HOME}/.zshrc"
ln -sf  "${CURRENT_DIR}/.p10k.zsh" "${HOME}/.p10k.zsh"

# Handle autostart of this
ln -sf  "${CURRENT_DIR}/libinput-gestures.conf" "${HOME}/libinput-gestures.conf"

ln -sf "${CURRENT_DIR}/rofi" "${HOME}/.config/rofi"
ln -sf "${CURRENT_DIR}/terminator" "${HOME}/.config/terminator"

mkdir -p "${HOME}/.config/docker"
ln -sf "${CURRENT_DIR}/docker/daemon.conf" "${HOME}/.config/docker/daemon.conf"


ln -sf "${CURRENT_DIR}/sshcofig" "${HOME}/.ssh/config"
# TODO: handle keys safely

